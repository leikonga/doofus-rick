{{define "quote"}}
    <a href="/quote/{{.ID}}" class="block p-4 bg-gray-200 rounded border border-gray-400 hover:bg-gray-300 transition-colors">
        <p class="text-lg italic">{{.Content}}</p>
        <div class="mt-2 text-sm text-gray-400">
            Added on {{.Timestamp.Format "Jan 02, 2006"}} by {{.CreatorName}}
        </div>
    </a>
{{end}}
